{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["../src/*"],
      "@lib/*": ["../src/*"]
    }
  },
  "references": [
    {
      "path": "../src"
    }
  ],
  "include": ["**/*.ts"]
}
