{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "../dist",
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./*"]
    },
    "composite": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
