{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./*"]
    },
    "composite": true
  },
  "include": ["**/*.ts"]
}
